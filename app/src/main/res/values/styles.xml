<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorNaranjaNegocio</item>
        <item name="colorPrimaryDark">@color/colorAmarilloApp</item>
        <!-- <item name="colorSecondaryDark">#FFC107</item> -->
        <item name="colorAccent">#000000</item>
    </style>
    <style name="AppThemeSplash" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryDark">#2196F3</item>
        <!-- <item name="colorSecondaryDark">#FFC107</item> -->
        <item name="colorAccent">#000000</item>
    </style>
    <style name="ThemeVerderProducto" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorNaranjaNegocio</item>
        <item name="colorPrimaryDark">@color/colorAmarilloApp</item> <!--Color naranja-->
        <item name="colorAccent">@color/blanco</item>
    </style>

    <style name="ThemeDetailsProducto" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorAmarilloApp</item>
        <item name="colorPrimaryDark">@color/negro</item> <!--Color naranja-->
        <item name="colorAccent">@color/colorNaranjaNegocio</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
